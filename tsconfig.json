{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/esm",
    "rootDirs": [
      "./src/result/types"
    ],
    "types": [
      "jest"
    ],
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "src/development",
    "**/types/**",
    "**/__tests__/**"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/index.ts"
    ],
    "out": "docs"
  }
}
