{
  "name": "@ryandur/sand",
  "version": "1.4.2",
  "description": "helper objects and functions",
  "homepage": "https://ryandur.github.io/sand/",
  "repository": "https://github.com/RyanDur/sand",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/**"
  ],
  "keywords": [
    "result",
    "maybe",
    "asyncresult",
    "functional"
  ],
  "scripts": {
    "test": "jest",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run build:cjs && npm run build:esm && typedoc --excludeInternal",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "build:esm": "tsc -p ./tsconfig.json",
    "prepublish": "npm run build",
    "deploy": "gh-pages -d docs",
    "test:coverage": "npm test -- src/lib --coverage",
    "test:badges": "npm run test:coverage && jest-coverage-badges --output './docs/badges'",
    "test:ci": "npm run test:badges -- --ci --runInBand"
  },
  "author": "Ryan Durling",
  "license": "MIT",
  "devDependencies": {
    "@types/faker": "^5.5.1",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-webpack-plugin": "^2.5.4",
    "faker": "^5.5.3",
    "gh-pages": "^3.2.3",
    "jest": "^27.2.0",
    "jest-coverage-badges": "^1.1.2",
    "ts-jest": "^27.0.5",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "tsdoc": "^0.0.4",
    "typedoc": "^0.22.6",
    "typescript": "^4.2.3"
  }
}